<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:orientation="horizontal"
    android:paddingVertical="10dp">


    <ImageView
        android:id="@+id/iv_thumbnail"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/thumbnail"/>
    
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--Name Text View-->
        <TextView
            android:id="@+id/tv_res_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Bazekran Lebanese Restaurant"
            android:paddingHorizontal="10dp"/>

        <!--Location & Cuisine Layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="15dp">
            <TextView
                android:id="@+id/tv_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dubai"
                android:paddingHorizontal="10dp"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_cuisine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chinese"
                android:paddingHorizontal="10dp"
                android:textSize="14sp"/>
        </LinearLayout><!--Location & Cuisine Layout End-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="15dp">
            <TextView
                android:id="@+id/tv_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3.8"
                android:paddingHorizontal="10dp"
                android:textSize="14sp"
                android:textColor="@color/golden"/>

            <TextView
                android:id="@+id/tv_reviews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="96 reviews"
                android:paddingHorizontal="10dp"
                android:textSize="14sp"
                android:textColor="@color/reviews_blue"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>